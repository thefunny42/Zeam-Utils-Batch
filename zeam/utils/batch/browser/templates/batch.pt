<div class="batchNav"
     i18n:domain="zeam">
  <a href="#"
     tal:attributes="href view/previous"
     tal:condition="view/previous">
    &lt; <tal:translate
            i18n:translate="">Previous</tal:translate>
  </a>
  <tal:repeat repeat="item view/batch">
    <a href="#" class="#"
       tal:attributes="href item/url;
                       class item/style"
       tal:condition="item/url"
       tal:content="item/name">
    </a>
    <span tal:condition="not: item/url"
          tal:replace="string:..." />
  </tal:repeat>
  <a href="#"
     tal:attributes="href view/next"
     tal:condition="view/next">
    <tal:translate
       i18n:translate="">Next</tal:translate> &gt;
  </a>
</div>


